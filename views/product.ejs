<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Add Products</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    :root {
      --light-bg: #DAD7CD;
      --sage: #A3B18A;
      --olive: #588157;
      --forest: #3A5A40;
      --moss: #344E41;
    }

    body {
      background-color: var(--light-bg);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      height: 100vh;
      margin: 0;
      padding: 40px 20px 20px;
      overflow-y: auto;
    }

    .form-table {
      background: white;
      border-collapse: separate;
      border-spacing: 0 1.2rem;
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);
      border-radius: 16px;
      overflow: hidden;
      width: 520px;
      max-width: 95vw;
    }

    .form-table th {
      background-color: var(--forest);
      color: white;
      padding: 1rem 1.5rem;
      font-size: 1.75rem;
      text-align: center;
      letter-spacing: 0.05em;
      user-select: none;
    }

    .form-table td {
      padding: 0.7rem 1.5rem;
      vertical-align: middle;
    }

    .form-table tr:not(:last-child) td {
      border-bottom: 1.5px solid var(--sage);
    }

    label {
      color: var(--olive);
      font-weight: 600;
      display: inline-block;
      width: 140px;
      font-size: 1rem;
    }

    input[type="text"],
    input[type="number"],
    input[type="date"],
    input[type="file"],
    select,
    textarea {
      width: 100%;
      padding: 8px 12px;
      border-radius: 8px;
      border: 1.5px solid var(--sage);
      font-size: 1rem;
      color: var(--forest);
      transition: border-color 0.3s ease;
      font-family: inherit;
      resize: vertical;
    }

    input[type="text"]:focus,
    input[type="number"]:focus,
    input[type="date"]:focus,
    input[type="file"]:focus,
    select:focus,
    textarea:focus {
      border-color: var(--olive);
      outline: none;
      box-shadow: 0 0 6px var(--olive);
    }

    textarea {
      min-height: 80px;
    }

    .submit-row td {
      text-align: center;
      padding-top: 1.5rem;
    }

    button {
      background-color: var(--olive);
      color: white;
      font-weight: 700;
      border: none;
      padding: 12px 32px;
      border-radius: 12px;
      font-size: 1.15rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: var(--moss);
    }

    /* Quantity + Unit group */
    .quantity-unit-group {
      display: flex;
      gap: 8px;
      align-items: center;
    }

    .quantity-unit-group input[type="number"] {
      flex: 2;
      margin: 0;
    }

    .quantity-unit-group select {
      flex: 1;
      margin: 0;
      padding-left: 8px;
      padding-right: 8px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <form action="/add-product" method="POST" enctype="multipart/form-data">
    <table class="form-table" role="presentation">
      <thead>
        <tr>
          <th colspan="2">Add Product</th>
        </tr>
      </thead>
      <tbody>
        <!-- Product Name -->
        <tr>
          <td><label for="productName">Product Name</label></td>
          <td><input type="text" id="productName" name="productName" required placeholder="Enter product name" /></td>
        </tr>

        <!-- Category -->
        <tr>
          <td><label for="category">Category</label></td>
          <td><input type="text" id="category" name="category" placeholder="Enter category" required /></td>
        </tr>

        <!-- Quantity Available + Unit -->
        <tr>
          <td><label for="quantityAvailable">Quantity Available</label></td>
          <td>
            <div class="quantity-unit-group">
              <input type="number" id="quantityAvailable" name="quantityAvailable" min="0" value="0" required />
              <select id="quantityUnit" name="quantityUnit" required>
                <option value="pcs">pcs</option>
                <option value="kg">kg</option>
                <option value="liter">liter</option>
                <option value="pack">pack</option>
                <option value="dozen">dozen</option>
              </select>
            </div>
          </td>
        </tr>

        <!-- Upload File (Image or PDF) -->
        <tr>
          <td><label for="productFile">Upload File</label></td>
          <td>
            <div class="input-group">
              <label class="input-group-text" for="productFile"><i class="bi bi-upload"></i></label>
              <input
                type="file"
                class="form-control"
                id="productFile"
                name="productFile"
                accept="image/*,application/pdf"
                required
              />
            </div>
          </td>
        </tr>

        <!-- Best Before -->
        <tr>
          <td><label for="bestBefore">Best Before</label></td>
          <td><input type="date" id="bestBefore" name="bestBefore" required /></td>
        </tr>

        <!-- Price -->
        <tr>
          <td><label for="price">Price (Rs.)</label></td>
          <td><input type="number" id="price" name="price" required placeholder="Enter price" min="0" step="0.01" /></td>
        </tr>

        <!-- Description -->
        <tr>
          <td><label for="description">Description</label></td>
          <td><textarea id="description" name="description" placeholder="Product description"></textarea></td>
        </tr>

        <!-- Submit Button -->
        <tr class="submit-row">
          <td colspan="2">
            <button type="submit">Add Product</button>
          </td>
        </tr>
      </tbody>
    </table>
  </form>
</body>
</html>
