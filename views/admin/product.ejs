<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@500&display=swap" rel="stylesheet">


  <style>
      :root {
      --light-bg: #DAD7CD;
      --sage: #A3B18A;
      --olive: #588157;
      --forest: #3A5A40;
      --moss: #344E41;
      --card-bg: #f9f9f5;
      --card-shadow: rgba(0, 0, 0, 0.1);
    }
    body {
    font-family: "Segoe UI", Roboto, sans-serif;
    background-color: #f2f6fc;
    margin: 0;
    padding: 0; /* Removed padding here */
    font-family: 'Baloo 2', cursive;
  }

    nav {
    background-color: #588157;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
    padding: 10px 30px;
    width: 100%;
    height: 90px;
 
  }
    nav .nav-link {
      color: white !important;
      font-size: 1.4rem;
      font-weight: 500;
        margin-left: 20px;
    }

    h1 {
          margin-top: 40px;
      text-align: center;
      color: var(--olive);;
      margin-bottom: 40px;
    }

    .product-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 24px;
      justify-content: center;
    }

    .product-card {
      background: white;
      border-radius: 12px;
      border-left: 6px solid var(--olive);
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
      width: 300px;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .product-content {
      padding: 20px;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .product-title {
      font-size: 20px;
      font-weight: 600;
      color: #333;
    }

    .product-desc, .info-row {
      font-size: 14px;
      color: #555;
    }

    .info-row strong {
      color: #2c3e50;
    }

    .price {
      font-size: 16px;
      font-weight: bold;
      color: #27ae60;
    }

    .button-group {
      margin-top: 15px;
      display: flex;
      justify-content: space-between;
    }

    .btn {
      padding: 8px 14px;
      font-size: 14px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    .btn-edit {
      background-color: var(--olive);;
      color: white;
    }

    .btn-remove {
      background-color:var(--olive);;
      color: white;
    }

    .btn-edit:hover {
      background-color: #2980b9;
    }

    .btn-remove:hover {
      background-color: #c0392b;
    }
  </style>
</head>
<body>

  <!-- Full Width Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid justify-content-end">
      <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="/admin">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/product">Products</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/users">Users</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/contactDetail">Contact Details</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/addProduct">Add Product</a></li>
      </ul>
    </div>
  </nav>

  <h1>All Products</h1>

  <div class="product-grid">

    <!-- Product 1 -->
    <div class="product-card">
      <div class="product-content">
        <div class="product-title">Fresh Apples</div>
        <div class="product-desc">Juicy and sweet red apples from Mustang.</div>
        <div class="info-row"><strong>By:</strong> Farmer Ram</div>
        <div class="info-row"><strong>Category:</strong> Fruits</div>
        <div class="price">Rs. 120 /kg</div>
        <div class="info-row"><strong>Stock:</strong> 40 kg</div>
        <div class="info-row"><strong>Best Before:</strong> 2025-06-10</div>
        <div class="button-group">
          <button class="btn btn-edit">Edit</button>
          <button class="btn btn-remove">Remove</button>
        </div>
      </div>
    </div>

    <!-- Product 2 -->
    <div class="product-card">
      <div class="product-content">
        <div class="product-title">Organic Tomatoes</div>
        <div class="product-desc">Locally grown tomatoes with zero chemicals.</div>
        <div class="info-row"><strong>By:</strong> Farmer Sita</div>
        <div class="info-row"><strong>Category:</strong> Vegetables</div>
        <div class="price">Rs. 80 /kg</div>
        <div class="info-row"><strong>Stock:</strong> 60 kg</div>
        <div class="info-row"><strong>Best Before:</strong> 2025-06-15</div>
        <div class="button-group">
          <button class="btn btn-edit">Edit</button>
          <button class="btn btn-remove">Remove</button>
        </div>
      </div>
    </div>

    <!-- Product 3 -->
    <div class="product-card">
      <div class="product-content">
        <div class="product-title">Green Beans</div>
        <div class="product-desc">Fresh green beans harvested this morning.</div>
        <div class="info-row"><strong>By:</strong> Farmer Hari</div>
        <div class="info-row"><strong>Category:</strong> Vegetables</div>
        <div class="price">Rs. 70 /kg</div>
        <div class="info-row"><strong>Stock:</strong> 50 kg</div>
        <div class="info-row"><strong>Best Before:</strong> 2025-06-20</div>
        <div class="button-group">
          <button class="btn btn-edit">Edit</button>
          <button class="btn btn-remove">Remove</button>
        </div>
      </div>
    </div>

  </div>

</body>
</html>
