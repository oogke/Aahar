  <style>
    body {
    font-family: "Segoe UI", Roboto, sans-serif;
    background-color: #f2f6fc;
    margin: 0;
    padding: 0; /* Removed padding here */
    font-family: 'Baloo 2', cursive;
  }

    nav {
    background-color: #588157;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
    padding: 10px 30px;
    width: 100%;
    height: 90px;

  }
    nav .nav-link {
      color: white !important;
      font-size: 1.4rem;
      font-weight: 500;
      margin-left: 20px;
    }

    h1 {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 40px;
    }

    .product-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 24px;
      justify-content: center;
    }

    .product-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
      width: 300px;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .product-content {
      padding: 20px;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .product-title {
      font-size: 20px;
      font-weight: 600;
      color: #333;
    }

    .product-desc, .info-row {
      font-size: 14px;
      color: #555;
    }

    .info-row strong {
      color: #2c3e50;
    }

    .price {
      font-size: 16px;
      font-weight: bold;
      color: #27ae60;
    }

    .button-group {
      margin-top: 15px;
      display: flex;
      justify-content: space-between;
    }

    .btn {
      padding: 8px 14px;
      font-size: 14px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    .btn-edit {
      background-color: #3498db;
      color: white;
    }

    .btn-remove {
      background-color: #e74c3c;
      color: white;
    }

    .btn-edit:hover {
      background-color: #2980b9;
    }

    .btn-remove:hover {
      background-color: #c0392b;
    }
  </style>
</head>
