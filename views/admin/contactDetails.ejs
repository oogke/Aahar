<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@500&display=swap" rel="stylesheet">


  <style>
    :root {
      --light-bg: #DAD7CD;
      --sage: #A3B18A;
      --olive: #588157;
      --forest: #3A5A40;
      --moss: #344E41;
      --card-bg: #f9f9f5;
      --card-shadow: rgba(0, 0, 0, 0.1);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background-color: var(--light-bg);
      font-family: "Segoe UI", Roboto, sans-serif;
      color: #333;
      padding: 20px;
      font-family: 'Baloo 2', cursive;
    }

   
    h1 {
      text-align: center;
      font-size: 3rem;
      margin-bottom: 40px;
      color: var(--forest);
    }

    .userGrid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 30px;
      max-width: 1200px;
      margin: auto;
    }

    .userCard {
      background-color: var(--card-bg);
      border-radius: 16px;
      padding: 24px;
      box-shadow: 0 4px 12px var(--card-shadow);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border-left: 6px solid var(--olive);
    }

    .userCard:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }

    .userCard h2 {
      font-size: 1.8rem;
      margin-bottom: 12px;
      color: var(--moss);
    }

    .userCard p {
      font-size: 1rem;
      margin: 6px 0;
      line-height: 1.5;
    }

    .userCard span {
      font-weight: bold;
      color: var(--forest);
    }
      .back-btn {
      display: flex;
      justify-content: flex-start;
      margin-bottom: 20px;
    }
    #goBackBtn {
      background-color: var(--sage);
      color: white;
      border: none;
      padding: 10px 18px;
      font-weight: 600;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    #goBackBtn:hover {
      background-color: var(--olive);
    }
  </style>
</head>

<body>
  <div class="wrapper">
    <div class="back-btn">
      <button id="goBackBtn" onclick="history.back()"><i class="bi bi-arrow-left"></i> Back</button>
    </div>

  <h1>User Details</h1>

  <div class="userGrid"> 
     
    <%contacts.forEach(function(contact,index){%>
    <div class="userCard">
      <h2> <%= contact.name %></h2>
      <p><span>Email:</span> <%= contact.email %></p>
      <p><span>Phone:</span>  <%= contact.phoneNo %></p>
      <p><span>Address:</span>  <%= contact.address %></p>
    </div>
     <%
    }) %>

  </div>
  </div>
</body>
</html>
